      "legibility": {
        "description": "Text must be readable at various viewing distances and conditions",
        "guidelines": [
          "Follow recommended default and minimum text sizes for each platform",
          "Font weight impacts readability - thin weights require larger sizes",
          "Test legibility in different contexts including games",
          "Avoid light font weights (Ultralight, Thin, Light) for small text",
          "Prefer Regular, Medium, Semibold, or Bold weights"
        ]
      },
      "hierarchy": {
        "description": "Use typography to convey information importance",
        "guidelines": [
          "Adjust font weight, size, and color to emphasize important information",
          "Maintain relative hierarchy when users adjust text sizes",
          "Minimize number of typefaces even in customized interfaces",
          "Prioritize important content when responding to text-size changes"
        ]
      }
